<link href="~/Content/css/login.css" rel="stylesheet" type="text/css" />
<body id="pageBody">

<div id="divBoxed" class="container">

    <div class="transparent-bg" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; zoom: 1;"></div>

    <div class="divPanel notop nobottom">
        @Html.Partial("../Home/_NavigationBar")
        <div class="row-fluid">
            <div class="span12">
                <div id="contentInnerSeparator"></div>
            </div>
        </div>
    </div>

    <div class="contentArea">

        <div class="divPanel notop page-content">

            <div class="breadcrumbs">
                <a href="/Views/Home/_Home.cshtml">Trang Chủ</a> &nbsp;/&nbsp; <span>Quên mật khẩu</span>
            </div>
                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <div class="row-fluid">
                            <section id="content">
@using (Html.BeginForm("Index", "ForgotPassword", FormMethod.Post, new { @class = "login-content", @id = "ForgotPassForm", @name = "ForgotPassForm", role = "form" }))
{

                                    <h1>Quên mật khẩu</h1>
                                    <div>
                                        <p>Bạn vui lòng nhập tên tài khoản hoặc Email của mình để lấy lại mật khẩu.</p>
                                    </div>
                                    <div>
                                        <input type="text" placeholder="Tên tài khoản hoặc Email" required="" id="UserNameOrEmail" name="userNameOrEmail" />
                                    </div>

                                    <div>
                                        <h4 id="ErrorMessage1" style="color: red; margin-left: 30px;"> </h4>
                                    </div>
                                    <div style="margin-left:30%;">
                                        <input onclick="return false;" style="width: 250px" type="submit" value="Lấy lại mật khẩu" id="submitForgotPass" />
                                    </div>
}
                                <div class="button">
                                    <a href="#">Đăng nhập với Facebook</a>
                                </div><!-- button -->
                            </section><!-- content -->
                        </div>

                        <hr>
                        <br>


                    </div>
                    <!--End Main Content here-->

                </div>
                <div id="footerInnerSeparator"></div>
</div>
    </div>
    @Html.Partial("../Home/_Footer")
</div>
<br/><br/><br/>

</body>

<script type="text/javascript">
    //thuc hien check roi submit
    $(function () {
        $('#submitForgotPass').click(function() {
            $('#ErrorMessage1').html("");
            $.getJSON("/ForgotPassword/ValidateUser", { userNameOrEmail: $("#UserNameOrEmail").val() }, function (data) {
                if (!data)
                {
                    $('#ErrorMessage1').html("Tài khoản hoặc email không tồn tại!");
                    return false;
                }
                else {
                    $('#ForgotPassForm').submit();
                    return true;
                }
            });
        });
    });
</script>
