
<body id="pageBody">
    <div id="divBoxed" class="container">

        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>

        <div class="divPanel notop nobottom">
            @Html.Partial("../Home/_NavigationBar")
            <div class="row-fluid">
                <div class="span12">
                    <div id="contentInnerSeparator"></div>
                </div>
            </div>
        </div>

        <div class="contentArea">

            <div class="divPanel notop page-content">

                <div class="breadcrumbs">
                    <a href="/Views/Home/_Home.cshtml">Trang Chủ</a> &nbsp;/&nbsp; <span>Đăng nhập</span>
                </div>

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <div class="row-fluid">

                            <section id="content">
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new {@class = "login-content", @id = "LoginForm", @name = "LoginForm", role = "form"}))
                                {
                                    <h1>Đăng nhập</h1>
                                    <div>
                                        <input type="text" placeholder="Tên đăng nhập" id="UserNameInput" name="UserName" required="" />
                                    </div>
                                    <div>
                                        <input type="password" placeholder="Mật khẩu" id="PassWordInput" name="PassWord" required="" />
                                    </div>
                                    <div>
                                        <h4 id="ErrorMessage" style="color: red; margin-left: 30px;"> </h4>

                                    </div>
                                    <div>
                                        <input id="logInBtn" onclick="return false;" type="submit" value="Đăng nhập"/>
                                        <a href=@Url.Content("/#/ForgotPassword")>Quên mật khẩu?</a><a href="javascript:void(0);"><span><input name="RememberMe" type="checkbox" value="true" style="margin-bottom:5px; "></span>Nhớ tài khoản</a>
                                    </div>
                                }
                                <div class="button">
                                    <a href=@Url.Content("/#/Register")> Đăng ký mới</a>
                                </div><!-- button -->
                                <div class="button">
                                    <a href="@Url.Action("AuthenFacebook", "Login")">Đăng nhập với Facebook</a>
                                </div><!-- button -->
                            </section><!-- content -->
                        </div>

                        <hr>
                        <br>


                    </div>
                    <!--End Main Content here-->

                </div>

                <div id="footerInnerSeparator"></div>
            </div>
        </div>
            @Html.Partial("../Home/_Footer")
    </div>
    <br /><br /><br />
    <script type="text/javascript">
        $(function () {
            $('#logInBtn').click(function() {
                $('#ErrorMessage').html("Đang đăng nhập...");
                $.getJSON("/Login/ValidateUser", { UserName: $("#UserNameInput").val(), PassWord: $("#PassWordInput").val(), AccountType: false }, function (data) {
                    if (data == "WrongPass") {
                        $('#ErrorMessage').html("Sai tên đăng nhập hoặc mật khẩu!");
                        return false;

                    } else if (data == "Locked") {
                        $('#ErrorMessage').html("Tài khoản đang bị khóa hoặc chưa xác nhận!");
                        return false;
                    } else {
                        $('#LoginForm').submit();
                        return true;
                    }
                });
            });
        });
    </script>
</body>