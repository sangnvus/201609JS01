
<script type="text/javascript" src="~/Content/js/checkVerifycode.js"></script>
<body id="pageBody">
    <div id="divBoxed" class="container">

        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>

        <div class="divPanel notop nobottom">
            @Html.Partial("../Home/_NavigationBar")
            <div class="row-fluid">
                <div class="span12">
                    <div id="contentInnerSeparator"></div>
                </div>
            </div>
        </div>

        <div class="contentArea">

            <div class="divPanel notop page-content">

                <div class="breadcrumbs">
                    <a href="/Views/Home/_Home.cshtml">Trang Chủ</a> &nbsp;/&nbsp; <span>Xác nhận tài khoản</span>
                </div>

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <div class="row-fluid">

                            <section id="content">
                                @using (Html.BeginForm("updateIsverify", "Login", FormMethod.Post, new { @class = "verify-content", @id = "VerifyForm", @name = "VerifyForm", role = "form" }))
                                {
                                    <h2 style="color: #7E7E7E;font: bold 25px Helvetica, Arial, sans-serif;letter-spacing: -0.05em;line-height: 20px;margin: 10px 0 30px;">Xác nhận tài khoản</h2>
                                    <div>
                                        <span id="ErrorNotExistUser" style="color: red"></span>
                                        <input type="text" placeholder="Tên đăng nhập" id="UserName" name="UserName" required=""/>
                                    </div>
                                    <div>
                                        <span id="ErrorCode" style="color: red"></span>
                                        <input type="text" placeholder="Mã xác nhận" id="VerifyCode" name="VerifyCode" required=""/>
                                    </div>
                                    <div>
                                        <input id="VerifyBtn" onclick=" return false; " type="submit" style="margin-left: 35%" value="Xác nhận"/>
                                    </div>
                                }
                            </section><!-- content -->
                        </div>

                        <hr>
                        <br>


                    </div>
                    <!--End Main Content here-->

                </div>

                <div id="footerInnerSeparator"></div>
            </div>
        </div>
        @Html.Partial("../Home/_Footer")
    </div>
<br/><br/><br/>

</body>
