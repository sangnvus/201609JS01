<link href="~/Content/css/login.css" rel="stylesheet" type="text/css"/>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<body id="pageBody">

    <div id="divBoxed" class="container">

        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>

        <div class="divPanel notop nobottom">
            @Html.Partial("../Home/_NavigationBar")

            <div class="row-fluid">
                <div class="span12">
                    <div id="contentInnerSeparator"></div>
                </div>
            </div>
        </div>

        <div class="contentArea">

            <div class="divPanel notop page-content">

                <div class="breadcrumbs">
                    <a href="index.html">Trang Chủ</a> &nbsp;/&nbsp; <span>Đăng Ký</span>
                </div>

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <div class="row-fluid">
                            <section id="content">
                                @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "register-content", @id = "RegisterForm", @name = "RegisterForm", role = "form" }))
                                {

                                    <h1>Đăng Ký</h1>
                                    <!-- Tên hiển thị -->
                                    <div>
                                        <div ng-show="RegisterForm.FullName.$dirty && RegisterForm.FullName.$invalid" style="color: #d9534f;">
                                            <i class="icon-remove-sign  " style="color: #d9534f"></i>
                                            <span ng-show="RegisterForm.FullName.$error.required">Tên hiển thị không được để trống</span>
                                            <span ng-show="RegisterForm.FullName.$error.maxlength">Tên hiển thị phải ngắn hơn 20 kí tự</span>
                                            <span ng-show="RegisterForm.FullName.$error.pattern">Tên hiển thị chỉ gồm chữ</span>
                                        </div>
                                        <input type="text" name="FullName" placeholder="Tên hiển thị"
                                               ng-model="FullName"
                                               required
                                               ng-maxlength="20"
                                               ng-pattern="/^[a-zA-Z]+$/">
                                    </div>
                                    <!-- Tên đăng nhập -->
                                    <div>
                                        <div ng-show="RegisterForm.UserName.$dirty && RegisterForm.UserName.$invalid" style="color: #d9534f;">
                                            <i class="icon-remove-sign  " style="color: #d9534f"></i>
                                            <span ng-show="RegisterForm.UserName.$error.required">Tên đăng nhập không được để trống</span>
                                            <span ng-show="RegisterForm.UserName.$error.minlength">Tên đăng nhập phải dài hơn 8 kí tự</span>
                                            <span ng-show="RegisterForm.UserName.$error.maxlength">Tên đăng nhập phải ngắn hơn 20 kí tự</span>
                                            <span ng-show="RegisterForm.UserName.$error.pattern && !RegisterForm.UserName.$error.minlength">Tên đăng nhập chỉ gồm chữ và số </span>
                                        </div>
                                        <input type="text" name="UserName" placeholder="Tên đăng nhập"
                                               ng-model="UserName"
                                               required
                                               ng-minlength="8"
                                               ng-maxlength="20"
                                               ng-pattern="/^[a-zA-Z0-9]+$/">
                                    </div>
                                    <!-- Mật khẩu -->
                                    <div>
                                        <div ng-show="RegisterForm.PassWord.$dirty && RegisterForm.PassWord.$invalid" style="color: #d9534f;">
                                            <i class="icon-remove-sign  " style="color: #d9534f"></i>
                                            <span ng-show="RegisterForm.PassWord.$error.required">Mật khẩu không được để trống</span>
                                            <span ng-show="RegisterForm.PassWord.$error.minlength">Mật khẩu phải dài hơn 8 kí tự</span>
                                            <span ng-show="RegisterForm.PassWord.$error.maxlength">Mật khẩu phải ngắn hơn 20 kí tự</span>
                                        </div>
                                        <input name="PassWord" ng-model="PassWord" type="password"
                                               placeholder="Mật khẩu"
                                               ng-minlength="8"
                                               ng-maxlength="20"
                                               required>
                                    </div>
                                    <!-- Nhập lại mật khẩu -->
                                    <div>
                                        <div ng-show="RegisterForm.RePassWord.$dirty && RegisterForm.RePassWord.$invalid" style="color: #d9534f;">
                                            <i class="icon-remove-sign  " style="color: #d9534f"></i>
                                            <span ng-show="RegisterForm.RePassWord.$error.required">Nhập lại mật khẩu không được để trống</span>
                                            <span ng-show="RegisterForm.RePassWord.$error.unique && !RegisterForm.RePassWord.$error.required">Nhập lại mật khẩu không giống</span>
                                        </div>
                                        <input type="password" placeholder="Nhập lại mật khẩu"
                                               name="RePassWord"
                                               ng-model="RePassWord"
                                               password-match="PassWord"
                                               required>
                                    </div>
                                    <!-- Địa chỉ Email -->
                                    <div>
                                        <div ng-show="RegisterForm.Email.$dirty && RegisterForm.Email.$invalid" style="color: #d9534f;">
                                            <i class="icon-remove-sign  " style="color: #d9534f"></i>
                                            <span ng-show="RegisterForm.Email.$error.required">Email không được để trống</span>
                                            <span ng-show="RegisterForm.Email.$error.email">Email không đúng định dạng </span>
                                        </div>
                                        <input name="Email" type="email" placeholder="Nhập email example@domain.com"
                                               ng-model="email"
                                               autocomplete="off"
                                               required>
                                    </div>
                                    <div>Lỗi show ở đây</div>
                                    <div>

                                    </div>
                                    <div>
                                        <input type="submit" value="Đăng ký"
                                               style="margin-left: 33%; width: 150px;"
                                               ng-disabled="!RegisterForm.$dirty || (RegisterForm.$dirty && RegisterForm.$invalid)" />                                          
                                    </div>
                                }<!-- form -->
                                <div class="button">
                                    <a href="#">Đăng nhập với Facebook</a>
                                </div><!-- button -->
                                <div class="button">
                                    <a href=@Url.Content("/#/Login")>Đã có tài khoản? Đăng nhập</a>
                                </div><!-- button -->
                            </section><!-- content -->
                        </div>

                        <hr>
                        <br>


                    </div>
                    <!--End Main Content here-->

                </div>

                <div id="footerInnerSeparator"></div>
            </div>
        </div>
        @Html.Partial("../Home/_Footer")

    </div>
    <br /><br /><br />
</body>