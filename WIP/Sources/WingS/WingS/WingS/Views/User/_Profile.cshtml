                            <div class="span8">
                                <p>{{UserInfo.FullName}}</p>
                            </div>
                        </div>

                        <div class="row-fluid">
                            <div class="span4">
                                <p>Ngày Sinh</p>
                            </div>
                            <div class="span8">
                                <p>{{UserInfo.DOB}}</p>
                            </div>
                        </div>

                        <div class="row-fluid">
                            <div class="span4">
                                <p>Giới tính</p>
                            </div>
                            <div class="span8">
