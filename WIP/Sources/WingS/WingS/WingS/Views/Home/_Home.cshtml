<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<body id="pageBody">

    <div id="divBoxed" class="container">

        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>

        <div class="divPanel notop nobottom">
            <div class="row-fluid navBar">
                <div class="span12">
                    <div id="divLogo" class="pull-left">
                        <a href="@Url.Content("/#/Home")" id="divSiteTitle">WingS</a><br />
                        <a href="@Url.Content("/#/Home")" id="divTagLine">Hãy chia sẻ</a>
                    </div>

                    <div id="divMenuRight" class="pull-right">
                        <div class="navbar">
                            <button type="button" class="btn btn-navbar-highlight btn-large btn-primary" data-toggle="collapse" data-target=".nav-collapse">
                                NAVIGATION <span class="icon-chevron-down icon-white"></span>
                            </button>
                            <div class="nav-collapse collapse">
                                <ul class="nav nav-pills ddmenu">
                                    <li class="active"><a href=@Url.Content("/#/Home")>Trang chủ</a></li>
                                    <li><a href=@Url.Content("/#/Event")>Sự kiện</a></li>
                                    <li><a href=@Url.Content("/#/Discussion")>Thảo luận</a></li>
                                    <li><a href=@Url.Content("/#/Organization")>Tổ chức</a></li>
                                    <li><a href="portfolio.html">Về chúng tôi</a></li>
                                    <li><a href="contact.php">Liên hệ</a></li>
                                    @if (User.Identity == null || !User.Identity.IsAuthenticated)
                                    {
                                        <li><a href=@Url.Content("/#/Login")> Đăng nhập</a></li>
                                    }
                                    else
                                    {
                                        <li class="active dropdown">
                                            <img src="{{User_Information.ProfileImage}}" style="width:38px;height:38px; margin-top:2px;" /> <b class="caret"></b>
                                            <ul class="dropdown-menu">
                                                <li><a href="full.html">Tin nhắn</a></li>
                                                <li><a href="2-column.html">Thông báo</a></li>
                                                <li><a href=@Url.Content("/#/Profile/{{User_Information.UserName}}")>Thông tin tài khoản</a></li>
                                                <li><a href="@Url.Action("Logout", "Login")">Đăng xuất {{User_Information.FullName}}</a></li>
                                            </ul>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="navbar">
                            <div class="span6" style="float:right;">
                                <div class="box" style="float:right; margin-right:10px;">
                                    <div class="input-group">
                                        <span>
                                            <a href=@Url.Content("/#/Search")><i class="icon-search"></i></a>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <script src="../../Content/scripts/default.js" type="text/javascript"></script>
            @Html.Partial("../Home/_SlideBar")
        </div>
    
        <div class="contentArea">

            <div class="divPanel notop page-content">


                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h1>Dịch vụ của chúng tôi</h1>
                        <p>
                            <strong>
                                Hãy cùng nhau chia sẻ những thông tin về từ thiện trên khắp đất nước.
                                Cùng đóng góp và sẻ chia
                            </strong>
                        </p>

                        <br />
                        <br />

                        <div class="row-fluid">
                            <div class="span3">
                                <div class="box">
                                     <a href="@Url.Content("/#/CreateEvent")">
                                        <i class="icon-tasks"></i>
                                    </a>
                                    <h4 class="title">Tạo sự kiện</h4> <hr/>
                                    <p>
                                        Tạo ra những sự kiện từ thiện riêng của bạn để kêu gọi đóng góp.

                                    </p>
                                </div>
                            </div>

                            <div class="span3">

                                <div class="box">
                                    <a href="@Url.Content("/#/CreateDiscussion")"> <i class="icon-edit"></i></a>
                                    <h4 class="title">Tạo thảo luận</h4> <hr/>
                                    <p>
                                        Hãy chia sẻ cho chúng tôi những thông tin về những nơi cần việc từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <i class="icon-money"></i>
                                    <h4 class="title">Quyên góp</h4> <hr/>
                                    <p>
                                        Đóng góp để gây quĩ từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <a href="@Url.Content("/#/CreateOrganization")"><i class="icon-share"></i></a>
                                    <h4 class="title">Tạo tổ chức </h4> <hr />
                                    <p>
                                        Tổ chức có thể hoạt động tốt hơn cá nhân
                                    </p>
                                </div>
                            </div>
                        </div>
                        <hr />
                        @* Generate Top 4 Event *@
                        <div class="row-fluid" >
                            <span><h2><strong>Sự kiện</strong></h2></span>
                        </div>
                        <div class="row-fluid">
                            <div class="span3" ng-repeat="item in Event track by $index">
                                <div class="event-title">
                                    <a href="#"><h4 class="text-info">{{item.EventName}}</h4></a>
                                </div>
                                <div class="event-img">
                                    <a href="@Url.Content("/#/EventDetail/{{item.EventID}}")"><img src="{{item.ImageUrl}}" class="img-polaroid" alt="" style="width: 242px; height: 156px; margin: 5px 0px 15px;"></a>
                                </div>
                                <div class="event-content">
                                    <p>{{item.Content}}
                                    </p>
                                </div>
                                <div class="thread-footer">
                                    <i class="foundicon-thumb-up"></i><span><strong>{{item.Likes}}</strong></span>&nbsp; &nbsp;&nbsp; &nbsp;<i class="foundicon-chat"></i><span><strong>30</strong></span>
                                    <a href="#">Xem thêm &raquo;</a>
                                </div>

                            </div>


                        </div>
                        <hr>
                        <div class="row-fluid">
                            <h2><strong> Thảo luận</strong></h2>
                        </div>
                        <div class="row-fluid">


                            <div class="span3" ng-repeat="item in Thread track by $index">
                                    <div class="thread-title">
                                        <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><h4 class="text-info">{{item.ThreadName}}</h4></a>
                                     </div>
                                    <div class="thread-img">
                                        <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><img src="{{item.ImageUrl[0]}}" class="img-polaroid" alt="" style="width:242px;height:156px; margin: 5px 0px 15px;"></a>
                                    </div>
                                    <div class="thread-content">
                                        <p>{{item.Content}}</p>
                                    </div>
                                <div class="thread-footer">
                                    <i class="foundicon-thumb-up"></i><span><strong>{{item.Likes}}</strong></span>&nbsp; &nbsp;&nbsp; &nbsp;<i class="foundicon-chat"></i><span><strong>30</strong></span>
                                    <a href="#">Xem thêm &raquo;</a>
                                </div>
                       
                            </div>
                            
                            
                        </div>

                    </div>
                    <!--End Main Content-->
                </div>
                <hr />

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h1>Xếp hạng các tổ chức</h1>
                        <hr>

                        <br />
                        <br />
                    </div>
                    <div class="row-fluid">

                        <div class="span4" align="center" ng-repeat="item in Organization track by $index">
                            <div class="organization-title">
                                <h4 class="text-info">{{item.OrganizationName}}</h4>
                            </div>
                            <div class="organization-img">
                                <img src="{{item.LogoUrl}}" class="img-polaroid img-circle" style="width:111px;height:118px; margin: 5px 0px 15px;" >
                            </div>
                            <div class="organization-content">
                                <p>{{item.Introduction}}</p>
                            </div>
                            <div class="organization-footer">
                                <a href="#">Read More &raquo;</a>
                            </div>
                        </div>

                    </div>
                </div>
                <div align="center"><a class="btn btn-primary" href="#"><i class="icon-refresh icon-spin"></i> Xem xếp hạng...</a></div>
                <div id="footerInnerSeparator"></div>
            </div>

            </div>

        </div>
        @Html.Partial("../Home/_Footer")
  
    <br /><br /><br />

    <script src="../../Content/scripts/carousel/jquery.carouFredSel-6.2.0-packed.js" type="text/javascript"></script>
    <script type="text/javascript">$('#list_photos').carouFredSel({ responsive: true, width: '100%', scroll: 2, items: {width: 320,visible: {min: 2, max: 6}} });</script>
    <script src="../../Content/scripts/camera/scripts/camera.min.js" type="text/javascript"></script>
    <script src="../../Content/scripts/easing/jquery.easing.1.3.js" type="text/javascript"></script>
    <script type="text/javascript">function startCamera() {$('#camera_wrap').camera({ fx: 'scrollLeft', time: 2000, loader: 'none', playPause: false, navigation: true, height: '38.3%', pagination: true });}$(function(){startCamera()});</script>
</body>