<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

        <div class="divPanel notop nobottom">
            @Html.Partial("../Home/_SlideBar")
        </div>
        <div class="contentArea">
            <div class="divPanel notop page-content">

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h1>Hãy cùng nhau đóng góp</h1>

                        <br />
                        <br />

                        <div class="row-fluid">
                            <div class="span3">

                                <div class="box">
                                    <a href="@Url.Content("/#/CreateDiscussion")"> <i class="icon-edit"></i></a>
                                    <h4 class="title">Tạo thảo luận</h4> <hr/>
                                    <p>
                                        Hãy chia sẻ cho chúng tôi những thông tin về những nơi cần việc từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3" ng-if="User_Information.IsOrganazation==true">
                                <div class="box">
                                    <a href="@Url.Content("/#/CreateEvent")">
                                        <i class="icon-tasks"></i>
                                    </a>
                                    <h4 class="title">Tạo sự kiện</h4> <hr />
                                    <p>
                                        Tạo ra những sự kiện từ thiện riêng của bạn để kêu gọi đóng góp.

                                    </p>
                                </div>
                            </div>
                            <div class="span3" ng-if="User_Information.IsOrganazation==false">
                                <div class="box">
                                    <a href="@Url.Content("/#/CreateOrganization")"><i class="icon-share"></i></a>
                                    <h4 class="title">Tạo tổ chức </h4> <hr />
                                    <p>
                                        Tạo ra tổ chức để có đủ uy tín tổ chức những sự kiện quyên góp.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <i class="icon-money"></i>
                                    <h4 class="title">Quyên góp</h4> <hr/>
                                    <p>
                                        Đóng góp để gây quĩ từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <i class="icon-bar-chart"></i>
                                    <h4 class="title">Thống kê</h4> <hr />
                                    <p>
                                        Xem thống kê về các sự kiện
                                    </p>
                                </div>
                            </div>
                            
                        </div>
                        <hr />
                        @* Generate Top 4 Event *@
                        <div class="row-fluid" >
                            <span><h2><strong>Sự kiện</strong></h2></span>
                        </div>
                        <div class="row-fluid">
                            <div class="span3 addborder" ng-repeat="item in Event track by $index">
                                <a href="@Url.Content("/#/EventDetail/{{item.EventID}}")"><img src="{{item.MainImageUrl}}"></a>
                                <div class="contentTop">
                                    <div class="event-title">
                                        <h5 class="text-info">{{item.EventName}}</h5>
                                    </div>
                                    <div class="event-content">
                                        <p>{{item.ShortDescription}}</p>
                                    </div>
                                    <div class="event-footer">
                                        <i class="fa fa-thumbs-o-up" aria-hidden="true" title="Số lượt thích"></i> {{item.Likes}}
                                        <i class="fa fa-comment-o"   aria-hidden="true" title="Số bình luận" style="padding-left:35px"></i> {{item.NumberOfComments}}
                                        <a href="@Url.Content("/#/EventDetail/{{item.EventID}}")" style="padding-left:60px">Read More &raquo;</a>
                                    </div>
                                </div>
                                
                            </div>



                        </div>
                        <hr>
                        <div class="row-fluid">
                            <h2><strong> Thảo luận</strong></h2>
                        </div>
                        <div class="row-fluid">

                            <div class="span3 addborder" ng-repeat="item in Thread track by $index">
                                <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><img src="{{item.ImageUrl[0]}}"></a>
                                <div class="contentTop">
                                    <div class="thread-title">
                                        <h5 class="text-info">{{item.ThreadName}}</h5>
                                    </div>
                                    <div class="thread-content">
                                        <p>{{item.ShortDescription}}</p>
                                    </div>
                                    <div class="thread-footer">
                                        <i class="fa fa-thumbs-o-up" aria-hidden="true" title="Số lượt thích"></i> {{item.Likes}}
                                        <i class="fa fa-comment-o" aria-hidden="true" title="Số bình luận" style="padding-left:35px"></i> {{item.Comments}}
                                        <a href="@Url.Content("/#/EventDetail/{{item.ThreadID}}")" style="padding-left:60px">Read More &raquo;</a>
                                    </div>
                                </div>

                            </div>
                            
                        </div>

                    </div>
                    <!--End Main Content-->
                </div>
                <hr />

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h2><strong> Xếp hạng tổ chức</strong></h2>
                        <hr>

                        <br />
                        <br />
                    </div>
                    <div class="row-fluid">

                        <div class="span4" align="center" ng-repeat="item in Organization track by $index">
                            <div class="organization-title">
                                <h5 class="text-info">{{item.OrganizationName}}</h5>
                            </div>
                               <a href="@Url.Content("/#/OrganizationDetail/{{item.OrganizationId}}")">
                                <div class="organization-img">
                                    <img src="{{item.LogoUrl}}" class="img-polaroid img-circle" style="width:111px;height:118px; margin: 5px 0px 15px;">
                                </div>
                                </a>
                                <div class="organization-content">
                                    <p>{{item.Introduction}}</p>
                                </div>
</div>

                    </div>
                </div>
                <div align="center"><a class="btn btn-primary" href="#"> Xem danh sách</a></div>
                <div id="footerInnerSeparator"></div>
            </div>

            </div>
        @Html.Partial("../Home/_Footer")
  
    <br /><br /><br />
    <script src="../../Content/scripts/carousel/jquery.carouFredSel-6.2.0-packed.js" type="text/javascript"></script>
    <script type="text/javascript">$('#list_photos').carouFredSel({ responsive: true, width: '100%', scroll: 2, items: {width: 320,visible: {min: 2, max: 6}} });</script>
    <script src="../../Content/scripts/camera/scripts/camera.min.js" type="text/javascript"></script>
    <script src="../../Content/scripts/easing/jquery.easing.1.3.js" type="text/javascript"></script>
    <script type="text/javascript">function startCamera() {$('#camera_wrap').camera({ fx: 'scrollLeft', time: 2000, loader: 'none', playPause: false, navigation: true, height: '38.3%', pagination: true });}$(function(){startCamera()});</script>
