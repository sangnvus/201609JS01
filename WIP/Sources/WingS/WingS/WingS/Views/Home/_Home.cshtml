<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

        <div class="divPanel notop nobottom">
            @Html.Partial("../Home/_SlideBar")
        </div>
        <div class="contentArea">
            <div class="divPanel notop page-content">

                <div class="row-fluid">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h1>Hãy cùng nhau đóng góp</h1>

                        <br />
                        <br />

                        <div class="row-fluid">
                            <div class="span3">

                                <div class="box">
                                    <a href="@Url.Content("/#/CreateDiscussion")"> <i class="icon-edit"></i></a>
                                    <h4 class="title">Tạo thảo luận</h4> <hr/>
                                    <p>
                                        Hãy chia sẻ cho chúng tôi những thông tin về những nơi cần việc từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3" ng-if="User_Information.IsOrganazation==true">
                                <div class="box">
                                    <a id="createEvent1">
                                        <i class="icon-tasks"></i>
                                    </a>
                                    <input type="hidden" id="UserIdHd" value="{{User_Information.UserId}}" />
                                    <button type="button" hidden id="WarnCreateEvent" data-toggle="modal" data-target="#WarnningEvent"></button>
                                    <h4 class="title">Tạo sự kiện</h4> <hr />
                                    <p>
                                        Tạo ra những sự kiện từ thiện riêng của bạn để kêu gọi đóng góp.
                                    </p>
                                    <script type="text/javascript">
                                        $("#createEvent1").click(function () {
                                            $.getJSON("/EventPage/CheckCreateEvent", { userId: $("#UserIdHd").val() }, function (data) {
                                                if (!data) {
                                                    $('#WarnCreateEvent').click();
                                                }
                                                else {
                                                    window.location.href = "/#/CreateEvent/";
                                                }
                                            });
                                        });
                                    </script>
                                </div>
                            </div>
                            <div class="span3" ng-if="User_Information.IsOrganazation==false">
                                <div class="box">
                                    <a href="@Url.Content("/#/CreateOrganization")"><i class="icon-share"></i></a>
                                    <h4 class="title">Tạo tổ chức </h4> <hr />
                                    <p>
                                        Tạo ra tổ chức để có đủ uy tín tổ chức những sự kiện quyên góp.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <i class="icon-money"></i>
                                    <h4 class="title">Quyên góp</h4> <hr/>
                                    <p>
                                        Đóng góp để gây quĩ từ thiện.
                                    </p>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="box">
                                    <a href="@Url.Content("/#/Statistics")">
                                        <i class="icon-bar-chart"></i>
                                    </a>
                                    <h4 class="title">Thống kê</h4> <hr />
                                    <p>
                                        Xem thống kê về các sự kiện
                                    </p>
                                </div>
                            </div>
                            
                        </div>
                        <hr />
                        @* Generate Top 4 Event *@
                        <div class="row-fluid" >
                            <h2 style="color: rgb(0, 0, 0);">Sự kiện</h2>
                        </div>
                        <div class="row-fluid">
                            <div class="span3 addborder" ng-repeat="item in Event track by $index">
                                <a href="@Url.Content("/#/EventDetail/{{item.EventID}}")"><img src="{{item.MainImageUrl}}"></a>
                                <div class="contentTop">
                                    <div class="event-title">
                                        <h5 class="text-info">{{item.EventName}}</h5>
                                    </div>
                                    <div class="event-content">
                                        <p>{{item.ShortDescription}}</p>
                                    </div>
                                    <div class="event-footer" style="margin-top: 5px;">
                                        <span style="width: 48px;"><i class="fa fa-thumbs-o-up" aria-hidden="true" title="Số lượt thích"></i> {{item.Likes}}</span>
                                        <span style="margin-left: 30px;width: 50px;"><i class="fa fa-comment-o" aria-hidden="true" title="Số bình luận"></i> {{item.NumberOfComments}}</span>
                                        <span style="margin-left:30px"><a href="@Url.Content("/#/EventDetail/{{item.EventID}}")">Xem thêm &raquo;</a></span>
                                    </div>
                                </div>
                                
                            </div>



                        </div>
                        <hr>
                        <div class="row-fluid">
                            <h2 style="color: rgb(0, 0, 0);">Thảo luận</h2>
                        </div>
                        <div class="row-fluid">

                            <div class="span3 addborder" ng-repeat="item in Thread track by $index">
                                <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><img src="{{item.ImageUrl[0]}}"></a>
                                <div class="contentTop">
                                    <div class="thread-title">
                                        <h5 class="text-info">{{item.ThreadName}}</h5>
                                    </div>
                                    <div class="thread-content">
                                        <p>{{item.ShortDescription}}</p>
                                    </div>
                                    <div class="thread-footer" style="margin-top: 5px;">
                                        <span style="width: 48px;"><i class="fa fa-thumbs-o-up" aria-hidden="true" title="Số lượt thích"></i> {{item.Likes}}</span>
                                        <span style="margin-left: 30px;width: 50px;"><i class="fa fa-comment-o" aria-hidden="true" title="Số bình luận"></i> {{item.Comments}}</span>
                                        <span style="margin-left:30px"><a href="@Url.Content("/#/EventDetail/{{item.ThreadID}}")">Xem thêm &raquo;</a></span>
                                    </div>
                                </div>

                            </div>
                            
                        </div>

                    </div>
                    <!--End Main Content-->
                </div>
                <hr />

                <div class="row">
                    <!--Edit Main Content Area here-->
                    <div class="span12" id="divMain">
                        <h2 style="color: rgb(0, 0, 0);">Xếp hạng tổ chức</h2>
                        <hr>
                        <br/>
                    </div>
                    <div class="span12 row-fluid">

                        <div class="span4" align="center" ng-repeat="item in Organization track by $index">
                            <a href="@Url.Content("/#/OrganizationDetail/{{item.OrganizationId}}")">
                                <div class="">
                                    <img src="{{item.LogoUrl}}" class="img-circle" style="width: 118px; height: 118px; margin: 5px 0px 15px;">
                                </div>
                            </a>
                            <div class="organization-title">
                                <h5 class="text-info">{{item.OrganizationName}}</h5>
                            </div>

                            @*<div class="organization-content">
                                    <p>{{item.Introduction}}</p>
                                </div>*@
                        </div>
                    </div>
                </div>
                <br/>
                <div align="center"><a class="btn btn-primary"href=@Url.Content("/#/Organization")> Xem danh sách các tổ chức</a></div>
                <div id="footerInnerSeparator"></div>
            </div>

            </div>
        @Html.Partial("../Home/_Footer")
  <!-- Warnning Modal -->
<div class="modal modal-flex fade" id="WarnningEvent" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true" hidden>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="color: #fff; background-color: #2f4254;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="flexModalLabel">
                    Thông báo : Không thể tạo sự kiện!
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p>Bạn không thể taọ sự kiện vì tổ chức của bạn đã bị cấm hoặc chưa kích hoạt.</p>
                </div>
            </div>
            <div class="modal-footer" style="background-color: #e0e7e8;">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
