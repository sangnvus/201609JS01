                    <div id="TextBoxDiv">
                        
                    </div>
                </div>
                <div class="row-fluid">
                    <button id="addButton" type="button" class="btn btn-medium btn-info" style="margin-left: 470px; margin-right: 20px;">
                        <i class="fa fa-plus" aria-hidden="true"></i> Thêm lịch trình</button>
                    <button id="removeButton" type="button" class="btn btn-medium btn-danger">
                        <i class="fa fa-minus" aria-hidden="true"></i> Xóa lịch trình</button>
