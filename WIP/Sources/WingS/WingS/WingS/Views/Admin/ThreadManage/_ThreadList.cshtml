<body>
@Html.Partial("../Admin/_TopSideNavigation")
<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">
    <div class="page-content">
        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        Bài viết
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="Admin/#/DashBoard">Thống kê</a>
                        </li>
                        <li class="active">Danh sách bài viết</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        @Html.Partial("../Admin/ThreadManage/_ThreadCircleTitle")
        <!-- begin ADVANCED TABLES ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Danh sách bài viết</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên bài viết</th>
                                    <th style="width: 120px">Người tạo</th>
                                    <th style="width: 128px">Ngày tạo </th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="item in allThread">
                                    <td>{{ $index + 1 }}</td>
                                    <td><a href="@Url.Content("/Admin/#/ThreadDetail/{{item.ThreadID}}")"><strong>{{item.ThreadName}}</strong></a></td>
                                    <td>{{item.Creator}}</td>
                                    <td>{{item.CreatedDate}}</td>
                                    <td>
                                        <button class="btn btn-green" style="width: 125px" ng-if="item.Status">Đang thảo luận</button>
                                        <button class="btn btn-danger" style="width: 125px" ng-if="!item.Status">Bị cấm</button>
                                    </td>
                                    <td>
                                        <a href="@Url.Content("/Admin/#/ThreadDetail/{{item.ThreadID}}")" class="btn btn-blue">Xem chi tiết</a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
<!-- /.page-content -->
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
<!-- GLOBAL SCRIPTS -->
<script src="~/Content/Admin/js/jquery.min.js"></script>
<script src="~/Content/Admin/js/plugins/bootstrap/bootstrap.min.js"></script>
<script src="~/Content/Admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/Content/Admin/js/plugins/popupoverlay/jquery.popupoverlay.js"></script>
<script src="~/Content/Admin/js/plugins/popupoverlay/defaults.js"></script>
<!-- HISRC Retina Images -->
<script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

<!-- PAGE LEVEL PLUGIN SCRIPTS -->
<script src="~/Content/Admin/js/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin/js/plugins/datatables/datatables-bs3.js"></script>
<script src="~/Content/Admin/js/demo/advanced-tables-demo.js"></script>


<!-- THEME SCRIPTS -->
<script src="~/Content/Admin/js/flex.js"></script>
</body> 