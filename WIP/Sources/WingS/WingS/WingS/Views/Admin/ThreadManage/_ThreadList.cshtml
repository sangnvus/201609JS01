<body>
@Html.Partial("../Admin/_TopSideNavigation")
<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">
    <div class="page-content">
        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        Bài viết
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="/Admin/#/DashBoard">Thống kê</a>
                        </li>
                        <li class="active">Danh sách bài viết</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        @Html.Partial("../Admin/ThreadManage/_ThreadCircleTitle")
        <!-- begin ADVANCED TABLES ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Danh sách bài viết</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table datatable="ng" id="" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                    <tr>
                                        <th style="width: 25px;">STT</th>
                                        <th>Tên bài viết</th>
                                        <th style="">Người tạo</th>
                                        <th style="">Ngày tạo </th>
                                        <th>Trạng thái</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in allThread">
                                        <td>{{ $index + 1 }}</td>
                                        <td class="nameAdmin">
                                            <a class="pull-left" href="@Url.Content("/Admin/#/ThreadDetail/{{item.ThreadID}}")">
                                                <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.ImageUrl[0]}}" alt="">
                                            </a>
                                            <p> {{item.ThreadName}}</p>
                                        </td>
                                        <td>{{item.Creator}}</td>
                                        <td>{{item.CreatedDate}}</td>
                                        <td>
                                            <button class="btn btn-green" style="width: 125px" ng-if="item.Status" ng-click="ban($index,item.ThreadID)">Đang thảo luận</button>
                                            <button class="btn btn-danger" style="width: 125px" ng-if="!item.Status" ng-click="unBan($index,item.ThreadID)">Bị cấm</button>
                                        </td>
                                        <td>
                                            <a href="@Url.Content("/Admin/#/ThreadDetail/{{item.ThreadID}}")" class="btn btn-blue">Xem chi tiết</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
<!-- /.page-content -->
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
<!-- HISRC Retina Images -->
<script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

<!-- THEME SCRIPTS -->
<script src="~/Content/Admin/js/flex.js"></script>
</body> 