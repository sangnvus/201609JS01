<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">

        <div class="page-content">

            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <h1>
                            Báo cáo bài viết
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> <a href="/Admin/#/DashBoard">Thống kê</a>
                            </li>
                            <li><a href="#" onclick="return false">Báo cáo</a></li>
                            <li class="active">Báo cáo bài viết</li>
                        </ol>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->

            <div class="row">
                <div class="col-lg-12">

                    <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4>Danh sách báo cáo</h4>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table datatable="ng" id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Bài viết bị báo cáo</th>
                                            <th>Số lần bị báo cáo mới</th>
                                            <th>Tổng số lần bị báo cáo</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in reportStatistic track by $index">
                                            <td>{{$index+1}}</td>
                                            <td class="nameAdmin">
                                                <a class="pull-left" href="@Url.Content("/Admin/#/ThreadDetail/{{item.IsReportedId}}")">
                                                    <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.IsreportedImage}}" alt="">
                                                </a>
                                                <p>&nbsp;{{item.IsreportedUserName}}</p>
                                            </td>
                                            <td>&nbsp;{{item.NewReportedTimes}}</td>
                                            <td>&nbsp;{{item.TotalReportedTimes}}</td>
                                            <td>
                                                <button class="btn btn-primary" style="width: 125px" ng-if="item.IsreportedUserStatus " ng-click="ban($index,item.IsReportedId)">Đang thảo luận </button>
                                                <button class="btn btn-danger" style="width: 125px" ng-if="!item.IsreportedUserStatus " ng-click="unBan($index,item.IsReportedId)">Bị cấm</button>
                                            </td>
                                            <td>
                                                <a class="btn btn-blue" href="@Url.Content("/Admin/#/ReportThreadDetail/{{item.IsReportedId}}")">Xem chi tiết</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.portlet-body -->
                    </div>
                    <!-- /.portlet -->

                </div>
                <!-- /.col-lg-12 -->
            </div>

        </div>
        <!-- /.page-content -->

    </div>
    <!-- /#page-wrapper -->
    <!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>

