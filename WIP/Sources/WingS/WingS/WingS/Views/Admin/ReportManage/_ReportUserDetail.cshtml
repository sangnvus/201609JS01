<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">

        <div class="page-content">

            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <h1>
                            Chi tiết báo cáo thành viên
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> <a href="@Url.Content("/Admin/#/DashBoard")">Thống kê</a>
                            </li>
                            <li><a href="#" onclick="return false">Báo cáo</a></li>
                            <li>
                                <a href="@Url.Content("/Admin/#/ReportUser")">Báo cáo thành viên</a>
                            </li>
                            <li class="active">Chi tiết</li>
                        </ol>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->

            <div class="row">
                <div class="col-lg-12">

                    <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4>Báo cáo chi tiết về {{currentUserProfile.UserName}}</h4>
                            </div>
                            <div class="portlet-widgets" ng-if="currentUserProfile!=null">
                                <button class="btn btn-primary" ng-if="currentUserProfile.IsActive " ng-click="ban(currentUserProfile.UserId)">Khóa tài khoản này</button>
                                <button class="btn btn-danger" ng-if="!currentUserProfile.IsActive " ng-click="unBan(currentUserProfile.UserId)">Mở khóa tài khoản này</button>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table datatable="ng" id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th>Người báo cáo</th>
                                            <th>Lý do</th>
                                            <th>Ngày báo cáo</th>
                                            <th>Trạng thái</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in UserReportDetailData">
                                            <td class="nameAdmin">
                                                <a class="pull-left" href="@Url.Content("/Admin/#/UserProfile/{{item.UserId}}")">
                                                    <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.ReportorImage}}" alt="">
                                                </a>
                                                <p>&nbsp;{{item.ReportorUserName}}</p>
                                            </td>
                                            <td>{{item.Reason}}</td>
                                            <td>{{item.ReportTime}}</td>
                                            <td>
                                                <a class="label label-primary" ng-if="item.Status ">Mới</a>
                                                <a class="label label-default" ng-if="!item.Status ">Đã xem</a>
                                            </td>
                                            
                                        </tr>
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.portlet-body -->
                    </div>
                    <!-- /.portlet -->

                </div>
                <!-- /.col-lg-12 -->
            </div>

        </div>
        <!-- /.page-content -->

    </div>
    <!-- /#page-wrapper -->
    <!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>
