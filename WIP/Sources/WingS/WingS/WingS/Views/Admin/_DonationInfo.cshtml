<body>
    @Html.Partial("../Admin/_TopSideNavigation")
<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">
    <div class="page-content">
        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        Thông tin quyên góp
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="/Admin/#/DashBoard">Thống kê</a>
                        </li>
                        <li class="active">Thông tin quyên góp</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        <!-- begin ADVANCED TABLES ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Thông tin quyên góp</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="NewProjectTable" class="panel-collapse collapse in">
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table datatable="ng" id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên sự kiện</th>
                                            <th>Người quyên góp</th>
                                            <th>Lời nhắn</th>
                                            <th>Số tiền</th>
                                            <th>Ngày quyên góp</th>
                                            <th>Mã giao dịch</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in AllDonationRecord">
                                            <td>{{$index + 1}}</td>
                                            <td class="nameAdmin">
                                                <a class="pull-left" href="@Url.Content("/Admin/#/EventDetail/{{item.EventId}}")">
                                                    <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.EventBasicInformation.MainImageUrl}}" alt="">
                                                </a>
                                                <p>&nbsp;{{item.EventBasicInformation.EventName}}</p>
                                            </td>
                                            <td class="nameAdmin">
                                                <a class="pull-left" href="@Url.Content("/Admin/#/UserProfile/{{item.UserId}}")">
                                                    <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.UserImageUrl}}" alt="">
                                                </a>
                                                <p>{{item.UserName}}</p>
                                            </td>
                                            <td>{{item.Content}}</td>
                                            <td>{{item.DonatedMoney}}</td>
                                            <td>{{item.DonatedDate}}</td>
                                            <td>{{item.TradeCode}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.portlet-body -->
                    </div>
                </div>
                <!-- /.portlet -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.page-content -->
</div>
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>
