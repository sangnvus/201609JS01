<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">
        <div class="page-content">
            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <h1>
                            Sự kiện
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index-2.html">Thống kê</a>
                            </li>
                            <li class="active">Danh sách sự kiện</li>
                        </ol>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->
            <!-- start DASHBOARD CIRCLE TILES -->
            @Html.Partial("../Admin/OrganizationManage/_OrganizationCircleTiles")
            <!-- end DASHBOARD CIRCLE TILES -->
            <!-- begin ADVANCED TABLES ROW -->
            <div class="row">

                <div class="col-lg-12">

                    <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4>Danh sách tổ chức</h4>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table datatable="ng" id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th style="width: 20px;">STT</th>
                                            <th style="width: 688px;">Tên tổ chức</th>
                                            <th style="">Địa chỉ Email</th>
                                            <th style="">Người đăng ký </th>
                                            <th style="">Ngày đăng ký</th>
                                            <th>Trạng thái</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="odd gradeX" ng-repeat="item in allOrg">
                                            <td>{{ $index + 1 }}</td>
                                            <td>
                                                <a class="pull-left" href="@Url.Content("/Admin/#/OrganizationDetail/{{item.OrganizationId}}")">
                                                    <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{item.LogoUrl}}" alt="">
                                                </a>
                                                <h4>&nbsp;{{item.OrganizationName}}</h4>
                                            </td>
                                            <td>{{item.Email}}</td>
                                            <td>{{item.Creator.UserName}}</td>
                                            <td>{{item.CreatedDate}}</td>
                                            @*<td ng-switch="item.IsVerify">
                                                <div ng-switch-when="false">
                                                    <a class="btn btn-xs btn-warning">Chờ duyệt</a>
                                                </div>
                                                <div ng-switch-when="true" ng-switch="item.IsActive">
                                                    <a class="btn btn-xs btn-green" ng-switch-when="true">Đang hoạt động</a>
                                                    <a class="btn btn-xs btn-danger" ng-switch-when="false">Bị cấm</a>
                                                </div>

                                            </td>*@
                                            <td>
                                                <button class="btn btn-green" style="width: 125px" ng-if="item.IsActive" ng-click="ban($index,item.OrganizationId)">Đang hoạt động</button>
                                                <button class="btn btn-danger" style="width: 125px" ng-if="!item.IsActive" ng-click="unBan($index,item.OrganizationId)">Bị cấm</button>
                                            </td>

                                        </tr>
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.portlet-body -->
                    </div>
                    <!-- /.portlet -->

                </div>
                <!-- /.col-lg-12 -->

            </div>
        </div>
        <!-- /.page-content -->
    </div>
    <!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>
    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>
