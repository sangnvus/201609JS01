<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">

        <div class="page-content">

            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <h1>
                            Sự kiện
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="/Admin/#/DashBoard">Sự kiện</a>
                            </li>
                            <li class="active">Thống kê sự kiện</li>
                        </ol>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->
            <!-- begin DASHBOARD CIRCLE TILES -->
            @Html.Partial("../Admin/EventManage/_EventCircleTile")
            <!-- end DASHBOARD CIRCLE TILES -->
            <!-- begin ADVANCED TABLES ROW -->
            <div class="row">
                <!-- newest event-->
                <div class="col-lg-12">
                    <div class="portlet portlet-purple">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4><i class="fa fa-exchange fa-fw"></i> Sự kiện mới nhất</h4>
                            </div>
                            <div class="portlet-widgets">
                                <a data-toggle="collapse" data-parent="#accordion" href="#transactionsPortlet3" onclick="return false"><i class="fa fa-chevron-down"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="transactionsPortlet3" class="panel-collapse collapse in">
                            <div class="portlet-body">
                                <div class="table-responsive dashboard-demo-table">
                                    <table class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tên sự kiện</th>
                                                <th>Thể loại</th>
                                                <th>Ngày tạo</th>
                                                <th>Địa điểm</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in TopNewEvent">
                                                <td class="nameAdmin">
                                                    <a class="pull-left" href="@Url.Content("/Admin/#/EventDetail/{{x.EventID}}")">
                                                        <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{x.MainImageUrl}}" alt="">
                                                    </a>
                                                    <p> {{x.EventName}}</p>
                                                </td>
                                                <td>{{x.EventType}}</td>
                                                <td>{{x.CreatedDate}}</td>
                                                <td>{{x.Location}}</td>
                                                <td>
                                                    <span class="label btn-green" ng-if="x.TimeStatus == 'process'">Đang hoạt động</span>
                                                    <span class="label btn-danger" ng-if="x.TimeStatus == 'ban'">Bị Cấm</span>
                                                    <span class="label btn-blue" ng-if="x.TimeStatus == 'done'">Đã hoàn thành</span>
                                                    <span class="label btn-orange" ng-if="x.TimeStatus == 'income'">Sắp diễn ra</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- popular Event -->
                <div class="col-lg-12">
                    <div class="portlet portlet-purple">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4><i class="fa fa-exchange fa-fw"></i> Sự kiện được ủng hộ nhiều nhất</h4>
                            </div>
                            <div class="portlet-widgets">
                                <a data-toggle="collapse" data-parent="#accordion" href="#transactionsPortlet4" onclick="return false"><i class="fa fa-chevron-down"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="transactionsPortlet4" class="panel-collapse collapse in">
                            <div class="portlet-body">
                                <div class="table-responsive dashboard-demo-table">
                                    <table class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tên sự kiện</th>
                                                <th>Thể loại</th>
                                                <th>Địa điểm</th>
                                                <th>Số tiền được ủng hộ</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in TopHotEvent">
                                                <td class="nameAdmin">
                                                    <a class="pull-left" href="@Url.Content("/Admin/#/EventDetail/{{x.EventID}}")">
                                                        <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{x.MainImageUrl}}" alt="">
                                                    </a>
                                                    <p> {{x.EventName}}</p>
                                                </td>
                                                <td>{{x.EventType}}</td>
                                                <td>{{x.Location}}</td>
                                                <td>{{x.ExpectedMoney}} Vnđ</td>
                                                <td>
                                                    <span class="label btn-green" ng-if="x.TimeStatus == 'process'">Đang hoạt động</span>
                                                    <span class="label btn-danger" ng-if="x.TimeStatus == 'ban'">Bị Cấm</span>
                                                    <span class="label btn-blue" ng-if="x.TimeStatus == 'done'">Đã hoàn thành</span>
                                                    <span class="label btn-orange" ng-if="x.TimeStatus == 'income'">Sắp diễn ra</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end popular Event -->

            </div>
        </div>
        <!-- /.page-content -->

    </div>
    <!-- /#page-wrapper -->
    <!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>
    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>