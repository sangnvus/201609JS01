<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">

        <div class="page-content">

            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h1>
                                Sự kiện     
                            </h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="/Admin/#/DashBoard">Thống kê</a>
                                </li>
                                <li class="active">Danh sách sự kiện</li>
                            </ol>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->
            <!-- begin DASHBOARD CIRCLE TILES -->
            @Html.Partial("../Admin/EventManage/_EventCircleTile")
            <!-- end DASHBOARD CIRCLE TILES -->
            <!-- begin NEW USER TABLES ROW -->
            <!-- begin ADVANCED TABLES ROW -->
            <div class="row">

                <div class="col-lg-12">

                    <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4>Danh sách sự kiện</h4>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="">
                            <div class="portlet-body">
                                <div class="table-responsive">
                                    <table datatable="ng" id="" class="table table-striped table-bordered table-hover table-green">
                                        <thead>
                                            <tr>
                                                <th style="width: 30px;">STT</th>
                                                <th>Tên sự kiện</th>
                                                <th>Thể loại</th>
                                                <th style="">Tổ chức</th>
                                                <th style="">Người tạo</th>
                                                <th>Ngày tạo</th>
                                                <th style="">Số tiền dự kiến</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in AllEventlist">
                                                <td>{{$index+1}}</td>
                                                <td class="nameAdmin">
                                                    <a class="pull-left" href="@Url.Content("/Admin/#/EventDetail/{{x.EventID}}")">
                                                        <img style="width: 40px; height: 40px;" class="media-object img-circle" src="{{x.MainImageUrl}}" alt="">
                                                    </a>
                                                    <p> {{x.EventName}}</p>
                                                </td>
                                                <td>{{x.EventType}}</td>
                                                <td class="center">{{x.OrganizationName}}</td>
                                                <td class="center">{{x.CreatorName}}</td>
                                                <td class="center">{{x.CreatedDate}}</td>
                                                <td class="center">{{x.ExpectedMoney}}</td>
                                                <td class="center">
                                                    <span class="label center-block btn-blue" ng-if="x.TimeStatus == 'process'" ng-click="banEvent($index,x.EventID)">Đang diễn ra</span>
                                                    <span class="label center-block btn-danger" ng-if="x.TimeStatus == 'ban'" ng-click="unbanEvent($index,x.EventID)">Bị Cấm</span>
                                                    <span class="label center-block btn-dark-blue" ng-if="x.TimeStatus == 'done'">Đã xong</span>
                                                    <span class="label center-block btn-green" ng-if="x.TimeStatus == 'income'" ng-click="banEvent($index,x.EventID)">Sắp diễn ra</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                    </div>
                    <!-- /.portlet -->

                </div>
                <!-- /.col-lg-12 -->

            </div>
            <!-- /.row -->

        </div>
        <!-- /.page-content -->

    </div>
    <!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>