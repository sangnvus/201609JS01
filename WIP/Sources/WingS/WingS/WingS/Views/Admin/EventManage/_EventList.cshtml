<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
    <div id="page-wrapper">

        <div class="page-content">

            <!-- begin PAGE TITLE ROW -->
            <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h1>
                                Sự kiện     
                            </h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="index-2.html">Thống kê</a>
                                </li>
                                <li class="active">Danh sách sự kiện</li>
                            </ol>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            <!-- /.row -->
            <!-- end PAGE TITLE ROW -->
            <!-- begin DASHBOARD CIRCLE TILES -->
            @Html.Partial("../Admin/EventManage/_EventCircleTile")
            <!-- end DASHBOARD CIRCLE TILES -->
            <!-- begin NEW USER TABLES ROW -->
            <!-- begin ADVANCED TABLES ROW -->
            <div class="row">

                <div class="col-lg-12">

                    <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4>Danh sách sự kiện</h4>
                            </div>
                            <div class="portlet-widgets">
                                <a data-toggle="collapse" data-parent="#accordion" href="#NewProjectTable"><i class="fa fa-chevron-down"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="#EventTable">
                            <div class="portlet-body">
                                <div class="table-responsive">
                                    <table datatable="ng" id="" class="table table-striped table-bordered table-hover table-green">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên sự kiện</th>
                                                <th>Thể loại</th>
                                                <th style="width:100px;">Tổ chức</th>
                                                <th style="width:100px;">Người tạo</th>
                                                <th>Ngày tạo</th>
                                                <th style="width:150px;">Số tiền dự kiến</th>
                                                <th>Trạng thái</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in AllEventlist">
                                                <td>{{$index+1}}</td>
                                                <td><a href="@Url.Content("/Admin/#/EventDetail/{{x.EventID}}")">{{x.EventName}}</a></td>
                                                <td>{{x.EventType}}</td>
                                                <td class="center">{{x.OrganizationName}}</td>
                                                <td class="center">{{x.CreatorName}}</td>
                                                <td class="center">{{x.CreatedDate}}</td>
                                                <td class="center">{{x.ExpectedMoney}} Vnđ</td>
                                                <td class="center">
                                                    <span class="label center-block btn-green" ng-if="x.TimeStatus == 'process'" ng-click="banEvent($index,x.EventID)">Đang hoạt động</span>
                                                    <span class="label center-block btn-danger" ng-if="x.TimeStatus == 'ban'" ng-click="unbanEvent($index,x.EventID)">Bị Cấm</span>
                                                    <span class="label center-block btn-blue" ng-if="x.TimeStatus == 'done'">Đã hoàn thành</span>
                                                    <span class="label center-block btn-orange" ng-if="x.TimeStatus == 'income'" ng-click="banEvent($index,x.EventID)">Sắp diễn ra</span>
                                                </td>
                                                <td class="center">
                                                    <a href=@Url.Content("/Admin/#/EventDetail/{{x.EventID}}")>
                                                        <button class="btn btn-primary btn-sm" type="button">
                                                            <i class="fa fa-eye"></i>
                                                        </button>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                    </div>
                    <!-- /.portlet -->

                </div>
                <!-- /.col-lg-12 -->

            </div>
            <!-- /.row -->

        </div>
        <!-- /.page-content -->

    </div>
    <!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>