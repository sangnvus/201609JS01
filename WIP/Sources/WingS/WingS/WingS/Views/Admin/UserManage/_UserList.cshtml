<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">

    <div class="page-content">

        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        Danh sách thành viên
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="index-2.html">Thống kê</a>
                        </li>
                        <li class="active">Danh sách thành viên</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        <!-- begin DASHBOARD CIRCLE TILES -->
        @Html.Partial("../Admin/UserManage/_UserCircleTiles")
        <!-- end DASHBOARD CIRCLE TILES -->
        <!-- begin NEW USER TABLES ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Danh sách thành viên</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table datatable="ng" id="thitcho" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th style="width: 80px;">STT</th>
                                    <th style="width: 220px;">Họ và tên</th>
                                    <th style="width: 220px;">Tên đăng nhập</th>
                                    <th style="width: 220px;">Địa chỉ Email</th>
                                    <th style="">Loại tài khoản</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr class="gradeX" ng-repeat="x in UserList">
                                    <td>{{ $index + 1 }}</td>
                                    <td>{{ x.FullName }}</td>
                                    <td>{{ x.UserName }}</td>
                                    <td>{{ x.Email }}</td>
                                    <td>
                                        <p ng-if="x.AccountType">Admin</p>
                                        <p ng-if="!x.AccountType">User</p>
                                    </td>
                                    <td>{{ x.CreateDate }}</td>
                                    <td>
                                        <button class="btn btn-default" style="width: 125px" ng-if="!x.IsVerify">Chưa kích hoạt</button>
                                        <button class="btn btn-green" style="width: 125px" ng-if="x.IsActive && x.IsVerify" ng-click="ban($index,x.UserId)">Đang hoạt động</button>
                                        <button class="btn btn-danger" style="width: 125px" ng-if="!x.IsActive && x.IsVerify" ng-click="unBan($index,x.UserId)">Bị cấm</button>
                                    </td>
                                    <td>
                                        <a href=@Url.Content("/Admin/#/UserProfile/{{x.UserName}}")><button class="btn btn-blue">Xem chi tiết</button></a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->

            </div>
            <!-- /.col-lg-12 -->

        </div>
        <!-- /.row -->

    </div>
</div>
    <!-- /.page-content -->
    <!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>