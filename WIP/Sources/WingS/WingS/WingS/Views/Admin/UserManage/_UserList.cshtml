<body>
    @Html.Partial("../Admin/_TopSideNavigation")
    <!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">

    <div class="page-content">

        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        Danh sách thành viên
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="index-2.html">Thống kê</a>
                        </li>
                        <li class="active">Danh sách thành viên</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        <!-- begin DASHBOARD CIRCLE TILES -->
        @Html.Partial("../Admin/UserManage/_DashboardCircleTiles")
        <!-- end DASHBOARD CIRCLE TILES -->
        <!-- begin NEW USER TABLES ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Danh sách thành viên</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="thitcho" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th style="width: 80px;">STT</th>
                                    <th style="width: 220px;">Họ và tên</th>
                                    <th style="width: 220px;">Tên đăng nhập</th>
                                    <th style="width: 220px;">Địa chỉ Email</th>
                                    <th style="">Loại tài khoản</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr class="gradeX" ng-repeat="x in UserList">
                                    <td>{{ $index + 1 }}</td>
                                    <td>{{ x.FullName }}</td>
                                    <td>{{ x.UserName }}</td>
                                    <td>{{ x.Email }}</td>
                                    <td>
                                        <p ng-if="x.AccountType">Admin</p>
                                        <p ng-if="!x.AccountType">User</p>
                                    </td>
                                    <td>{{ x.CreatedDate }}</td>
                                    <td>
                                        <button class="btn btn-block" style="width: 150px" disabled="" ng-if="!x.IsVerify">Chưa kích hoạt</button>
                                        <button class="btn btn-default" style="width: 150px" @*data-toggle="modal" data-target="#banUser"*@ ng-if="x.IsActive && x.IsVerify" ng-click="DoChangeStatus($index,x.UserId)">Đang hoạt động</button>
                                        <button class="btn btn-danger" style="width: 150px" @*data-toggle="modal" data-target="#unBanUser"*@ ng-if="!x.IsActive && x.IsVerify" ng-click="DoChangeStatus($index,x.UserId)">Bị cấm</button>
                                    </td>
                                    <td>
                                        <a href="/Admin/#/UserProfile"><button class="btn btn-blue">Xem chi tiết</button></a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->

            </div>
            <!-- /.col-lg-12 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.page-content -->

</div>
    <!-- Unban Modal -->
    <div class="modal modal-flex fade" id="unBanUser" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="margin-top:250px;width: 300px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="flexModalLabel">
                        Mở khóa tài khoản
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <p>Bạn muốn mở khóa tài khoản này?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-green">Có</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    <!-- Ban Modal -->
    <div class="modal modal-flex fade" id="banUser" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="margin-top:250px;width: 300px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="flexModalLabel">
                        Khóa tài khoản
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <p>Bạn muốn khóa tài khoản này?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-green">Có</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->
    <!-- GLOBAL SCRIPTS -->
    <script src="~/Content/Admin/js/jquery.min.js"></script>
    <script src="~/Content/Admin/js/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/Admin/js/plugins/popupoverlay/jquery.popupoverlay.js"></script>
    <script src="~/Content/Admin/js/plugins/popupoverlay/defaults.js"></script>
    <!-- HISRC Retina Images -->
    <script src="~/Content/Admin/js/plugins/hisrc/hisrc.js"></script>

    <!-- PAGE LEVEL PLUGIN SCRIPTS -->
    <script src="~/Content/Admin/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/Admin/js/plugins/datatables/datatables-bs3.js"></script>
    <script src="~/Content/Admin/js/demo/advanced-tables-demo.js"></script>
    <script type="text/javascript"></script>

<!-- THEME SCRIPTS -->
    <script src="~/Content/Admin/js/flex.js"></script>
</body>