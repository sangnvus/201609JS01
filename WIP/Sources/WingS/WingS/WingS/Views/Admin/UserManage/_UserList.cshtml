                                <h4>Danh sách thành viên</h4>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px;">STT</th>
                                            <th style="width: 220px;">Tài khoản</th>
                                            <th style="width: 220px;">Địa chỉ Email</th>
                                            <th>Ngày tạo</th>
                                            <th>Trạng thái</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="gradeX" ng-repeat="x in UserList">
                                            <td>{{ $index + 1 }}</td>
                                            <td>{{ x.UserName }}</td>
                                            <td>{{ x.Email }}</td>
                                            <td>{{ x.CreatedDate }}</td>
                                            <td>
                                                if(!{{ x.AccountType }}){
                                                    if(!{{x.IsVerify}}){
                                                        <button class="btn btn-block" disabled="">Chưa kích hoạt</button>
                                                }
                                                else if({{x.IsActive}})
                                                    <button class="btn btn-default">Đang hoạt động</button>
                                                }
                                                else if(!{{x.IsActive}}){
                                                    <button class="btn btn-danger">Bị cấm</button>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Admin/#/UserProfile"><button class="btn btn-blue">Xem chi tiết</button></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
