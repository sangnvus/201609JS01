<script type="text/javascript">$(document).ready(function () {$('.yoxview').yoxview({autoHideInfo:false,renderInfoPin:false,backgroundColor:'#ffffff',backgroundOpacity:0.8,infoBackColor:'#000000',infoBackOpacity:1});$('.yoxview a img').hover(function(){$(this).animate({opacity:0.7},300)},function(){$(this).animate({opacity:1},300)});});</script>

<body id="pageBody">

<div id="divBoxed" class="container">

    <div class="transparent-bg" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; zoom: 1;"></div>

    <div class="divPanel notop nobottom">
        @Html.Partial("../Home/_NavigationBar")
        <div class="row-fluid">
            <div class="span12">
                <div id="contentInnerSeparator"></div>
            </div>
        </div>
    </div>

    <div class="contentArea">

        <div class="divPanel notop page-content">

            <div class="breadcrumbs">
                <a href="Home.html">Trang chủ</a> &nbsp;/&nbsp; <span>Thảo luận</span>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <div class="box">
                        <i class="icon-edit"></i>
                        <h4 class="title">Tạo thảo luận</h4> <hr/>
                        <p>
                            Hãy chia sẻ cho chúng tôi những thông tin về những nơi cần việc từ thiện.
                        </p>
                    </div>
                </div>
                <div class="span3">
                    <div class="box">
                        <i class="icon-tasks"></i>
                        <h4 class="title">Tạo sự kiện</h4> <hr/>
                        <p>
                            Tạo ra những sự kiện từ thiện riêng của bạn để kêu gọi đóng góp.

                        </p>
                    </div>
                </div>

                <div class="span6">
                    <div class="box" style="float: left;">
                        <div class="input-group">
                            <span>
                                        <i class="icon-search"></i>
                                    </span>
                            <input type="text" class="form-control" style="margin-top: -18px; padding: 10px; border-color: rgb(224, 95, 3); border-radius: 10px;"/>

                        </div>

                    </div>
                </div>

            </div>

            <hr>
            <!--Edit Portfolio Content Area here-->
            <div class="row">

                <div class="span3" style="width:242px" ng-repeat="item in Thread track by $index">
                    <div class="thread-title">
                        <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><h5 class="text-info">{{item.ThreadName}}</h5></a>
                    </div>
                    <div class="thread-img">
                        <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><img src="{{item.ImageUrl}}" class="img-polaroid" alt="" style="width: 300px; height: 200px; margin: 5px 0px 15px;"></a>
                    </div>
                    <div class="thread-content">
                        <p>{{item.Content.substr(0, 150)}}...<a style="color: blue" href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")">Xem thêm</a></p>
                    </div>
                    <i class="general foundicon-clock"></i>&nbsp;<span><strong>{{item.CreatedDate}}</strong></span>
                    <div class="thread-footer" >
                        <i class="fa fa-thumbs-up" aria-hidden="true"></i><span><strong>{{item.Likes}}</strong></span>&nbsp; &nbsp;&nbsp; &nbsp;<i class="fa fa-eye"></i><span><strong>{{item.Views}}</strong></span><br/>
                    </div>

                </div>
            </div>
            <!--/End Portfolio Content Area-->
            <div align="center">
                <a class="btn btn-primary" href="#"><i class="icon-refresh icon-spin"></i> Synchronizing Content...</a>
            </div>
