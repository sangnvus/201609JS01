    <div class="contentArea">

        <div class="divPanel notop page-content">

            <div class="breadcrumbs">
                <a href="/#/Home">Trang chủ</a> &nbsp;/&nbsp; <span>Thảo luận</span>
            </div>
            @*<div class="row-fluid">
                <div class="span3">
                    <div class="box">
                        <i class="icon-edit"></i>
                        <h4 class="title">Tạo thảo luận</h4> 
