            <!--Edit Portfolio Content Area here-->
            <div class="row">

                <div class="spanThread addborder" ng-repeat="item in Thread| limitTo: paginationLimit()">
                    <div class="thread-img">
                        <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")"><img src="{{item.ImageUrl[0]}}" class="" alt=""></a>
                    </div>
                    <div class="contentTop">
                        <div class="thread-title">
                            <a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")" style="text-decoration: none;">
                                <h5 class="text-info">{{item.ThreadName}}</h5>
                            </a>
                        </div>
                        <div class="thread-content">
                            <p>{{item.ShortDescription}}</p>
                        </div>
                        <div class="thread-footer" style="margin-top: 5px;">
                            <span style="width: 48px;"><i class="fa fa-thumbs-o-up" aria-hidden="true" title="Số lượt thích"></i> {{item.Likes}}</span>
                            <span style="margin-left: 30px; width: 50px;"><i class="fa fa-comment-o" aria-hidden="true" title="Số bình luận"></i> {{item.Comments}}</span>
                            <span style="margin-left: 30px"><a href="@Url.Content("/#/ThreadDetail/{{item.ThreadID}}")">Xem thêm &raquo;</a></span>
                        </div>
                    </div>
                    <br />  
                    <br />  
                </div>
            </div>
            <!--/End Portfolio Content Area-->
            <br />
            <div align="center">
                <a class="btn btn-primary" href="#" onclick=" return false; " ng-show="hasMoreItemsToShow()" ng-click="showMoreItems()"><i class="icon-refresh icon-spin"></i> Xem thêm...</a>
            </div>
            <br/>
            <hr style="border-top: 1px solid #2865a1;" />
            <div class="row">
                <div class="span12" id="divMain">
                    <h2 style="color: rgb(0, 0, 0);">Xếp hạng cá nhân</h2>
                    <hr>
                    <br />
                </div>
            </div>
            <div class="row-fluid">

                <div class="span4" align="center" ng-repeat="item in TopThreeRankingUser track by $index">
                    <h4 class="text-info">{{item.UserName}}</h4>
                    <a href="@Url.Content("/#/Profile/{{item.UserName}}")">
                        <div class="">
                            <img src="{{item.ProfileImage}}" class="img-circle" style="width:118px;height:118px; margin: 5px 0px 15px;">
                        </div>
                    </a>
                    <div class="">
                        <p>{{item.UserSignature}}</p>
                    </div>
                    <br/>
                    <div>
                        <a href="@Url.Content("/#/Profile/{{item.UserName}}")">Xem chi tiết &raquo;</a>
                    </div>
                </div>

            </div>
        </div>
        <div id="footerOuterSeparator"></div>
