<body id="pageBody">
    <div id="divBoxed" class="container">
        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>
        <div class="divPanel notop nobottom">
            <div class="row-fluid navBar" style="border-bottom:none;">
                <div class="span12">
                    <div id="divLogo" class="pull-left">
                        <a href="@Url.Content("/#/Home")"><img src="~/Content/images/logo.png" style="width:145px;height:80px; margin-top:2px; padding-left:5px;" /></a><br />
                    </div>

                    <div id="divMenuRight" class="pull-right">
                        <div class="navbar">
                            <button type="button" class="btn btn-navbar-highlight btn-large btn-primary" data-toggle="collapse" data-target=".nav-collapse">
                                NAVIGATION <span class="icon-chevron-down icon-white"></span>
                            </button>
                            <div class="nav-collapse collapse">
                                <ul class="nav nav-pills ddmenu">
                                    <li class="active"><a href=@Url.Content("/#/Home")>Trang chủ</a></li>
                                    <li><a href=@Url.Content("/#/Event")>Sự kiện</a></li>
                                    <li><a href=@Url.Content("/#/Discussion")>Thảo luận</a></li>
                                    <li><a href=@Url.Content("/#/Organization")>Tổ chức</a></li>
                                    <li><a href="portfolio.html">Về chúng tôi</a></li>
                                    <li> <a href=@Url.Content("/#/Search")>Tìm kiếm</a></li>
                                    @if (User.Identity == null || !User.Identity.IsAuthenticated)
                                    {
                                        <li><a href=@Url.Content("/#/Login")> Đăng nhập</a></li>
                                    }
                                    else
                                    {
                                        <li class="active dropdown">
                                            <img src="{{User_Information.ProfileImage}}" style="width: 38px; height: 37px; margin-top: 2px;"/> <b class="caret"></b>
                                            <ul class="dropdown-menu">
                                                <li><a href="@Url.Content("/#/Messages/")"><i class="fa fa-envelope" style=" margin-left: -6px;margin-right: 4px; "></i> Tin nhắn<span class="badge green pull-right">4</span></a></li>
                                                <li><a href=@Url.Content("/#/Profile/{{User_Information.UserName}}")><i class="fa fa-bell" style="margin-left: -6px;margin-right: 4px; " ></i> Hoạt động</a></li>
                                                <li><a href=@Url.Content("/#/Profile/{{User_Information.UserName}}")><i class="fa fa-user" style="margin-left: -6px;margin-right: 4px; "></i> Thông tin tài khoản</a></li>
                                                <li ng-if="User_Information.IsOrganazation==true"><a href=@Url.Content("/#/OrganizationDetail/{{User_Information.UserId}}")><i class="fa fa-group" style=" margin-left: -6px;margin-right: 4px; "></i> Tổ chức của bạn</a></li>
                                                <li><a id="Logout" data-toggle="modal" data-target="#lgout" onclick="return false"><i class="fa fa-sign-out" style=" margin-left: -6px;margin-right: 4px; "></i> Đăng xuất {{User_Information.FullName}}</a></li>
                                            </ul>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Logout Notification Box -->
                    <div class="modal modal-flex fade" id="lgout" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true" hidden>
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header" style="color: #fff; background-color: #2f4254;">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class="modal-title" id="flexModalLabel">
                                        <i class="fa fa-sign-out"></i> Đăng xuất
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <p>Bạn thực sự muốn đăng xuất?</p>
                                    </div>
                                </div>
                                <div class="modal-footer" style="background-color: #e0e7e8;">
                                    <a class="btn" href="@Url.Action("Logout", "Login")">Có</a>
                                    <a class="btn" data-dismiss="modal">Không</a>

                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div>
                    <!-- /#logout -->
                </div>
            </div>
            <script src="../../Content/scripts/default.js" type="text/javascript"></script>
            <div class="row-fluid">
                <div class="span12">
                   
                </div>
            </div>
            </div>
        <div  ng-view="">
        </div>

</div>
            <style>
                #loading-bar-spinner .spinner-icon {
                    width: 25px;
                    height: 25px;
                    border: solid 4px transparent;
                    border-top-color: green;
                    border-left-color: green;
                    border-radius: 10px;
                }
            </style>
    <script>
        $(function () {
            $(".nav li").on("click", function () {
                $(".nav li").removeClass("active");
                $(this).addClass("active");
            });

        });
    </script>
            @if (User.Identity.Name != "")
            {
                <script type="text/javascript">
                    $(function () {
                        // Declare a proxy to reference the hub.
                        window.globalHub = $.connection.globalHub;
                        $.connection.hub.logging = true;
                        window.globalHub.client.notify = function (msg) {
                            alert(msg);
                        }
                        window.globalHub.client.ReceiverMessage = function (info) {
                            $('#messContainer').append(' <div class="media"><a class="pull-left" href="#"><img src="' + info.CreatorImage + '" style="width: 64px; height:64px;" class="img-rounded" alt="" /></a><div class="media-body"><h4 class="media-heading">' + info.CreatorName + '<span><small>' + info.CreatedDate + '</small></span></h4>' + info.Content + '</div></div><hr/>');
                            var height = $('#MessageBox')[0].scrollHeight;
                            $('#MessageBox').scrollTop(height);
                        }
                        window.globalHub.client.ReceivePublicMessage = function (info) {
                            $('#msgContainer').append('<div class="media"><a class="pull-left" href="#"><img src="' + info.CreatorImage + '" style="width: 50px; height:50px;" class="img-rounded" alt="" /></a>' + '<div class="media-body"><h4 class="media-heading"><small>' + info.CreatorName + '</small> <span><small>' + info.CreatedDate + '</small></span></h4>' + info.Content + '</div> <br /></div>');
                            var height = $('#msgContainer')[0].scrollHeight;
                            $('#msgContainer').scrollTop(height);
                        }
                        window.globalHub.client.NewMessageNotification = function (mess) {
                            Lobibox.notify('success', {
                                size: 'mini',
                                rounded: true,
                                position: 'center bottom',
                                delayIndicator: false,
                                msg: mess
                            });
                        }
                        window.hubReady = $.connection.hub.start();
                        window.hubReady.done(function () {
                            window.globalHub.server.connect();
                        });
                    });
                </script>
            }
            @RenderBody()

</body>

</html>